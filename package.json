{
  "name": "onmount",
  "description": "Run something when a DOM element appears and when it exits",
  "version": "1.3.0",
  "main": "index.js",
  "author": "Rico Sta. Cruz <rico@ricostacruz.com>",
  "bugs": {
    "url": "https://github.com/rstacruz/onmount/issues"
  },
  "files": [
    "dist",
    "lib",
    "index.js"
  ],
  "devDependencies": {
    "babel-jest": "22.4.1",
    "buble": "0.19.3",
    "docpress": "0.6.13",
    "eslint": "1.10.3",
    "eslint-config-standard": "4.4.0",
    "eslint-plugin-standard": "1.3.2",
    "git-update-ghpages": "1.3.0",
    "jest": "22.4.2",
    "npm-run-all": "4.1.2",
    "rollup": "0.56.4"
  },
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "test"
  },
  "homepage": "https://github.com/rstacruz/onmount#readme",
  "keywords": [
    "dom",
    "enter",
    "exit",
    "mutation",
    "mutationobserver",
    "observe"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rstacruz/onmount.git"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint \"{.,lib,lib/*,tests}/*.js\"",
    "build": "mkdir -p dist; rollup index.js -f umd -n onmount | buble > dist/onmount.js",
    "prepare": "run-s build"
